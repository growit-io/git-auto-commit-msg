  "bugs": {
    "url": "https://github.com/growit-io/git-auto-commit-message/issues"
  },
  "homepage": "https://github.com/growit-io/git-auto-commit-message#readme",
  "devDependencies": {
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "commander": "^2.12.2",
    "jest": "^21.2.1",
    "shell-escape": "^0.2.0",
    "shelljs": "^0.7.8"
  }
}
